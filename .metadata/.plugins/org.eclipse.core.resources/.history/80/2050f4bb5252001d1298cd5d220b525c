	<th th:fragment="column_link(fieldName, columnLabel)">
		<a class="styleLink text-white" th:href="@{'/users/page/' + ${currentPage} + '?sortField='+ ${fieldName} +'&sortDir=' + ${sortField != fieldName ? sortDir : reverseSort} + ${keyword != null ? '&keyword=' + ${keyword} : ''}}">[[${columnLabel}]]</a>
	 	<span th:if="${sortField == fieldName}" th:class="${sortDir == 'asc' ? 'fa fa-duotone fa-sort-up' : 'fa fa-duotone fa-sort-down'} "></span>
	</th>
	
	//setting page link for pagination.
	<a th:fragment="page_Link(pageNum, pageLabel)" class="page-link" th:href="@{'/users/page/' + ${pageNum} + '?sortField='+ ${sortField} +'&sortDir=' + ${sortDir} + ${keyword != null ? '&keyword=' + ${keyword} : ''	}}">[[${pageLabel}]]</a>
	
