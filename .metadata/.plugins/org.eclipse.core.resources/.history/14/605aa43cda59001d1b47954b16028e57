<body>
	<!-- Column header with sort method for Users-->
	<th th:fragment="column_link(fieldName, columnLabel, removeTag)" th:remove="${removeTag}">
		<a class="styleLink text-white" th:href="@{'/users/page/' + ${currentPage} + '?sortField='+ ${fieldName} +'&sortDir=' + ${sortField != fieldName ? sortDir : reverseSort} + ${keyword != null ? '&keyword=' + keyword : ''}}">[[${columnLabel}]]</a>
	 	<span th:if="${sortField == fieldName}" th:class="${sortDir == 'asc' ? 'fa fa-duotone fa-sort-up' : 'fa fa-duotone fa-sort-down'} "></span>
	</th>
	
	<!-- Column header with sort method for Categories-->
	<th th:fragment="column_link_category(fieldName, columnLabel, removeTag)" th:remove="${removeTag}">
		<a class="styleLink text-white" th:href="@{'/categories/page/' + ${currentPage} + '?sortField='+ ${fieldName} +'&sortDir=' + ${sortField != fieldName ? sortDir : reverseSort} + ${keyword != null ? '&keyword=' + keyword : ''}}">[[${columnLabel}]]</a>
	 	<span th:if="${sortField == fieldName}" th:class="${sortDir == 'asc' ? 'fa fa-duotone fa-sort-up' : 'fa fa-duotone fa-sort-down'} "></span>
	</th>
	
	<!-- setting page link for pagination in users page. -->
	<a th:fragment="page_Link(pageNum, pageLabel)" class="page-link" th:href="@{'/users/page/' + ${pageNum} + '?sortField='+ ${sortField} +'&sortDir=' + ${sortDir} + ${keyword != null ? '&keyword=' + keyword : ''	}}">[[${pageLabel}]]</a>
	
	<!-- setting page link for pagination in categories page. -->
	<a th:fragment="page_Link_category(pageNum, pageLabel)" class="page-link" th:href="@{'/categories/page/' + ${pageNum} + '?sortField='+ ${sortField} +'&sortDir=' + ${sortDir} + ${keyword != null ? '&keyword=' + keyword : ''	}}">[[${pageLabel}]]</a>
	
	<!-- user photo tag -->
	<div th:fragment="user_photos" th:remove="tag">
		<i th:if="${user.photos == null}" class="fa fa-image-portrait fa-3x icon-silver"></i>
		<img th:if="${user.photos != null}" alt="User thumbnail" th:src="@{${user.photosImagePath}}" width="135" height="150"/>
	</div>
	
	<!-- user enable / disable -->
	<div th:fragment="user_enabled" th:remove="tag">
		<a th:if="${user.enabled == true}" class="fa-solid fa-circle-check fa-2x icon-green styleLink" title="Deactivate" th:href="@{'/users/' + ${user.id} + '/enabled/false'}"></a>
		<a th:if="${user.enabled == false}" class="fa-solid fa-circle fa-2x icon-dark styleLink" title="Activate" th:href="@{'/users/' + ${user.id} + '/enabled/true'}"></a>
	</div>
	
	<!-- user enable / disable -->
	<div th:fragment="category_enabled" th:remove="tag" >
		<a th:if="${category.enabled == true}" class="fa-solid fa-circle-check fa-2x icon-green styleLink" title="Deactivate" th:href="@{'/categories/' + ${category.id} + '/enabled/false'}"></a>
		<a th:if="${category.enabled == false}" class="fa-solid fa-circle fa-2x icon-dark styleLink" title="Activate" th:href="@{'/categories/' + ${category.id} + '/enabled/true'}"></a>
	</div>
	
