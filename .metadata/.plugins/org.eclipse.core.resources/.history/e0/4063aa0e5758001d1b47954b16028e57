<script type="text/javascript" th:src="@{/js/common_form.js}"></script>
	
<script type="text/javascript">

	moduleURL = "[[@{/categories}]]";
	
	function checkName(form) {
		url = "[[@{/categories/check_name}]]";
		categoryName = $("#name").val();
		categoryId = $("#id").val();
		csrfVal = $("input[name='_csrf']").val();
		params = {id: categoryId, name: categoryName, _csrf: csrfVal};
			
		$.post(url, params, function(response) {
			if (response == "OK") {
				showModelDialogue("Success", "Category item is Created");
				form.submit();
			} else if (response == "Duplicate Name") {
				showModelDialogue("Warning", response + " is provided: " + categoryName);
			} else {
				showModelDialogue("Error", "Unknown response from server.");
			}
		}).fail(function(){
			showModelDialogue("Error", "Could not connect to the server.");
		});
		
		return false;
	};
	
	function showModelDialogue(title, message) {
		if (message != null) {
			$("#modalTitle").text(title);
			$("#modalBody").text(message);
			$("#modalDialogue").modal();
		};
	};
</script>
</body>

