function addNextDetails() {
	allDivDetails = $("[id^='divDetails-']");
	divDetailsCount = allDivDetails.length;
	
	htmlDetailSection = `
		<div class="row w-75 m-3" id="divDetails-${divDetailsCount}">
			<div class="form-group col-sm-5 row">
				<label class="col-sm-2 col-form-label">Name:</label>
				<div class="col-sm-10">
					<input type="text" class="form-control" name="detailNames" maxlength="255">
				</div> 
			</div>
			<div class="form-group col-sm-5 row">
				<label class="col-sm-2 col-form-label">Value:</label>
				<div class="col-sm-10">
					<input type="text" class="form-control" name="detailValues" maxlength="255">
				</div> 
			</div>
			<div class="form-group col-sm-2 row" id="addCloseButton">
				
			</div>
		</div>
	`;
	
	htmlLinkRemove = `<a class="btn fa fa-solid fa-circle-xmark fa-2x float-left" title="Remove this details"></a>`;
	
	$("#divProductDetails").append(htmlDetailSection);
	
	previousDivSelection = allDivDetails.last();
	
	$("#addCloseButton").previousDivSelection.append(htmlLinkRemove);
	
}